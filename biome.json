{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignore": [".svelte-kit", "node_modules", "test-vault", "build"]
	},
	"javascript": {
		"formatter": {
			"trailingComma": "es5"
		}
	}
}
